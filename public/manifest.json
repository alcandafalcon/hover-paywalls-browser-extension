{
  "name": "Hover - Bypass Paywalls",
  "description": "An undetectable, lightweight extension that allows you to access important information with ease and without distractions.",
  "manifest_version": 3,
  "version": "3.0.0",
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ad_blocking_rules",
        "enabled": true,
        "path": "rules/ad_blocking.json"
      },
      {
        "id": "paywall_bypass_rules",
        "enabled": true,
        "path": "rules/paywall_bypass.json"
      }
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  }
}